                                                        /*..................পরম করুনাময় অসীম দয়ালু আল্লাহ্‌র নামে শুরু করতেছি...............*/ 
#include<stdio.h>
void linear_search(int a[],int n,int x)
{
    int i;
    for(i=0;i<n;i++)
    {
        if(a[i]==x)
        {
            printf("%d found at position %d\n",x,i+1);
        }
    }
}
int main()
{
    int n,a[100000],i,x;
    printf("Please enter the size of array:\n");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("Please enter the number you want to search:\n");
    scanf("%d",&x);
    linear_search(a,n,x);
}
